{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
    <div class="media">
        <h1 class="mt-0">{{ program.title }}</h1>
        <div class="media-body">
            <p>Season :
                {{ season.number }}</p>
            <p>
                Numéro de l'épisode :
                {{ episode.number }}</p>
            <p>Titre de l'épisode :
                {{ episode.title }}</p>
            <p>Synopsis :
                {{ episode.synopsis }}
            </p>
        </div>
    </div>


    <a href="{{ path('category_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}
