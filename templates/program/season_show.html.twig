{% extends 'base.html.twig' %}

{% block title %}Saison#{{ season.id }}
{% endblock %}

{% block body %}
	<div
		class="media">
		{# <img class="align-self-start mr-3" src="{{programId.poster}}" alt="{{ programId.title }} poster"> #}
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
		<div>
			<p>Numéro de saison :{{ season.number }}</p>
			<p>
				Nombre d'épisodes :
				{{ season.episodes|length }}</p>
		</div>
		{% for episode in season.episodes %}

			<div>
				<p>Titre de l'épisode :
					{{ episode.title }}</p>
				<p>Synopsis :
					{{ episode.synopsis }}</p>
				<p>N° de l'épisode :
					{{ episode.number }}</p>
			</div>
			<a href="{{ path("program_episode_show", { programId: program.id, seasonId: season.id , episodeId: episode.id }) }}">Voir la fiche</a>
		{% endfor %}

	</div>
</div>

<a href="{{ path('program_index') }}">
	Retour à la liste des programmes
</a>{% endblock %}
