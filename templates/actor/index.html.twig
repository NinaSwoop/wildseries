{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}

{% block body %}

    <div class="album py-5">
    <div class="container">
        <div class="d-grid gap-2 d-md-flex mb-3 justify-content-md-end my-5">
            <a href="{{ path('app_index') }}"
               class="btn btn-primary btn-sm mt-5" type="button">Retour à l'accueil</a>
        </div>

        <h1 class="mt-5">Acteurs :</h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mt-5">
            {% for actor in actors %}
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p>{{ actor.firstname }} {{ actor.lastname }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('app_show', {'id': actor.id}) }}"
                                       class="btn btn-primary btn-sm">Voir la fiche</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="5">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
        </div>
    </div>
{% endblock %}