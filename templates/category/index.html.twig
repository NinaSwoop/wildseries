{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories{% endblock %}

{% block body %}

    <main class="container py-5">
        <div class="d-grid gap-2 d-md-flex mb-3 justify-content-md-end my-5">
            <a href="{{ path('app_index') }}"
               class="btn btn-primary btn-sm" type="button">Retour à l'accueil</a>
        </div>
        <h1 class="mt-5">Toutes les catégories : </h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mt-5">
            {% for category in categories %}
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2> {{ category.name }} </h2>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path("category_show", { categoryName: category.name }) }}"
                                       class="btn btn-primary btn-sm">Voir toutes les séries de cette catégorie</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="5">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
        </div>
    </main>
{% endblock %}
