{% extends 'base.html.twig' %}

{% block title %}Catégorie{{ category.name }}
{% endblock %}

{% block body %}

    <main class="container py-5">
        <div class="d-grid gap-2 d-md-flex mb-3 justify-content-md-end my-5">
            <a href="{{ path('app_index') }}" class="btn btn-primary btn-sm" type="button">Retour à l'accueil</a>
        </div>

        <h1>Trois séries de la table
            {{ category.name }}</h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mt-5">
            {% for program in programs %}
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3>{{ program.title }}</h3>
                            <p>{{ program.synopsis }}</p>
                            <p>ID de la série :
                                {{ program.id }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path("program_show", { 'slug': program.slug }) }}"
                                       class="btn btn-primary btn-sm">Voir toutes les séries de cette catégorie</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="5">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
        </div>
    </main>
{% endblock %}